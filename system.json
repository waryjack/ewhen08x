{
    "id": "ewhen",
    "title": "Everywhen",
    "description": "Everywhen RPG System (Unofficial)",
    "version": "1.1.1",
    "compatibility": {
      "minimum": "12",
      "verified": "12",
      "maximum":"13"
    }, 
    "authors": [
      {
        "name":"Chris Clouser",
        "discord":"Cannyjack"
      }
    ],
    "esmodules": [
        "module/ewhen.js"
    ],
    "documentTypes":{
      "Actor": {
        "hero": {
          "htmlFields":["backstory"],
          "filePathFields":["actor_image"]
        },
        "rival":{
          "htmlFields":["backstory"],
          "filePathFields":["actor_image"]
        },
        "tough":{
          "filePathFields":["actor_image"]
        },
        "rabble":{
          "filePathFields":["actor_image"]
        },
        "vehicle":{
          "filePathFields":["actor_image"]
        },
        "horde":{
          "filePathFields":["actor_image"]
        }
      },
      "Item":{
        "armor":{
          "htmlFields":["effect"]
        },
        "power":{
          "htmlFields":["effect"]
        },
        "weapon":{
          "htmlFields":["notes"]
        },
        "equipment":{
          "htmlFields":["description"]
        },
        "trait":{
          "htmlFields":["description"]
        }
      }
    },
    "scripts": [],
    "styles": [
        "styles/ew-grid.css",
        "styles/item.css"
    ],
    "languages": [
        {
          "lang": "en",
          "name": "English",
          "path": "lang/en.json"
        },
        {
          "lang": "fr",
          "name": "French",
          "path": "lang/fr.json"
        }
      ],
    "grid":{
      "distance":5,
      "units":"ft"
    },
    "initiative":"@priority_roll.expression + @main_attributes.mind.rank + @combat_attributes.initiative.rank",
    "primaryTokenAttribute": "resources.lifeblood",
    "secondaryTokenAttribute":"resources.resolve",
