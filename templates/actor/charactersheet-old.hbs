
<form class="{{cssClass}}" autocomplete="off">
    <header>
        <div>
        <img style="min-width:64px !important; min-height:64px !important" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
        </div>
        <div>
            <div>
                <input  style="width:50%; vertical-align:top; background:lightgray;" name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
                <div class="form-group" style="float:right; color:white;">
                <input data-minor-type="rival" id="minorNpc" name="system.isRival" type="checkbox" {{checked isRival}} /><label for="isRival">Rival</label>
                <input data-minor-type="tough" id="minorNpc" name="system.isTough" type="checkbox" {{checked isTough}} /><label for="isTough">Tough</label>
                <input data-minor-type="rabble" id="minorNpc" name="system.isRabble" type="checkbox" {{checked isRabble}} /><label for="isRabble">Rabble</label>
                </div>
            </div>

            <table class="item-table">
                    {{#unless (or isRabble isTough)}}
					<tr>
					  <td style="border-left:2px">
                           {{proper gameSettings.heroName}} <input style="background:black;margin-right:8px;" type="text" name="system.resources.hero_points" value="{{resources.hero_points}}" data-dtype="Number"/>

                             {{#if (setting "useArcana")}}{{proper gameSettings.arcanaName}} <input style="background:black; margin-right:8px" type="text" name="system.resources.arcana_points" value="{{resources.arcana_points}}" data-dtype="Number"/>{{/if}}
                              {{#if (setting "useFaith")}}{{proper gameSettings.faithName}} <input style="background:black; margin-right:8px" type="text" name="system.resources.faith_points" value="{{resources.faith_points}}" data-dtype="Number"/>{{/if}}
                            {{#if (setting "usePsionics")}}{{proper gameSettings.psionicsName}} <input style="background:black;" type="text" name="system.resources.psi_points" value="{{resources.psi_points}}" data-dtype="Number"/>{{/if}}
                             {{#if (setting "useCredit")}}{{localize "EW.attribute.resource.credit_rating"}} <input style="background:black;" type="text" name="system.resources.credit_rating" value="{{resources.credit_rating}}" data-dtype="Number"/>{{/if}}
                             {{#unless (setting "useCredit")}}{{localize "EW.game_term.currency"}} <input style="background:black;" class="money" type="text" name="system.resources.currency" value="{{resources.currency}}" data-dtype="Number"/>{{/unless}}
                        </td>
					</tr>
                    {{/unless}}
					</table>


        </div>
       <div class="flexcol">
        <div style="align-items:flex-start;"><a data-action="basicRoll" style="margin:0px !important;"><i class="fa fa-dice-six"></i></a></div>

        </div>

    </header>
    <div class="flexcol">
         <div class="flexrow" style="color:white; ">
                {{> 'systems/ewhen/templates/partials/HealthTracks.hbs'}}
            </div>
    </div>

{{!-- Sheet Tab Navigation --}}
<section class="sheetbody">
        <div>
            <div class="flexcol"> {{!--Outermost Flex Container--}}
                <div class="flexrow" style="align-content:flex-start">
                    {{> 'systems/ewhen/templates/partials/MainAttributes.hbs'}}
                    {{> 'systems/ewhen/templates/partials/CombatAttributes.hbs'}}
                    {{#unless isRabble}} {{> 'systems/ewhen/templates/partials/CareerList.hbs'}} {{/unless}}
                    <div class="flex-item">
                        <span>{{localize "Point Pools"}}</span>
                        <table>
                            <tr>
                                <td>
                            {{localize "EW.attribute.resource.hero_points"}} 
                            </td>
                            <td><input style="background:black;margin-right:8px;" type="text" name="system.resources.hero_points" value="{{resources.hero_points}}" data-dtype="Number"/><br/>
                                </td>
                                {{#if (setting "useArcana")}}{{localize "EW.attribute.resource.arcana_points"}} <input style="background:black; margin-right:8px; display:block;" type="text" name="system.resources.arcana_points" value="{{resources.arcana_points}}" data-dtype="Number"/><br/>{{/if}}
                                {{#if (setting "useFaith")}}{{localize "EW.attribute.resource.faith_points"}} <input style="background:black; margin-right:8px" type="text" name="system.resources.faith_points" value="{{resources.faith_points}}" data-dtype="Number"/><br/>{{/if}}
                                {{#if (setting "usePsionics")}}{{localize "EW.attribute.resource.psi_points"}} <input style="background:black;" type="text" name="system.resources.psi_points" value="{{resources.psi_points}}" data-dtype="Number"/><br/>{{/if}}
                                {{#if (setting "useCredit")}}{{localize "EW.attribute.resource.credit_rating"}} <input style="background:black;" type="text" name="system.resources.credit_rating" value="{{resources.credit_rating}}" data-dtype="Number"/><br/>{{/if}}
                                {{#unless (setting "useCredit")}}{{localize "EW.game_term.currency"}} <input style="background:black;" class="money" type="text" name="system.resources.currency" value="{{resources.currency}}" data-dtype="Number"/><br/>{{/unless}}
                            </tr>
                            </table>
                        </div>
                </div>
                <div class="flexrow">
                    <div class="flex-item">
                        {{> 'systems/ewhen/templates/partials/BoonList.hbs'}}
                        {{> 'systems/ewhen/templates/partials/FlawList.hbs'}}
                        {{#unless (or isTough isRabble)}} {{> 'systems/ewhen/templates/partials/PowerList.hbs'}} {{/unless}}

                    </div>
                    <div class="flex-item">
                        {{> 'systems/ewhen/templates/partials/WeaponList.hbs'}}
                        {{> 'systems/ewhen/templates/partials/ArmorList.hbs'}}
                        {{> 'systems/ewhen/templates/partials/EquipmentList.hbs'}}
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="tab misc">
            <div class="flexcol">
                <div class="flexrow">
                     <div class="flex-item">
                         <h3><div>{{localize "EW.game_term.miscmods"}}</div>
                    </h3>

                    <table>
                        <tr>
                     <td>
                            {{localize "EW.game_term.size"}}: <select name="system.size" id="size" style="color:white">
                                {{selectOptions config.sizes selected=size localize=true}}
                         
                            </select>
                            {{localize "EW.attribute.resource.lifeblood"}} <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.resources.lifeblood.misc_lfb" value="{{resources.lifeblood.misc_lfb}}" data-dtype="Number"/>
                            {{localize "EW.attribute.resource.resolve"}} <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.resources.resolve.misc_res" value="{{resources.resolve.misc_res}}" data-dtype="Number"/>
                            {{localize "EW.game_term.armor"}} <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.miscarmor" value="{{miscarmor}}" data-dtype="Number"/>
                            {{localize "EW.game_term.initbd"}}: <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.priority_roll.bd" value="{{priority_roll.bd}}" data-dtype="Number"/>
                            {{localize "EW.game_term.initpd"}}: <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.priority_roll.pd" value="{{priority_roll.pd}}" data-dtype="Number"/>
                             {{localize "EW.game_term.initmod"}}: <input style="background:black; margin-right:8px" class="statfield" type="text" name="system.priority_roll.miscMod" value="{{priority_roll.miscMod}}" data-dtype="Number"/>


                        </td>
                        </tr>
                    </table>
                    </div>
                </div>
                <div class="flexrow">
                    <div class="flex-item edit-cont">
                        {{editor backstory target="system.backstory" button=true owner=owner editable="editable"}}
                    </div>
                </div>

            </div>
        </div>

    </section>
</form>