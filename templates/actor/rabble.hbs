<div class="container">
  <div class="rabble-img">
    <img class="profile-img ew-cs-img" 
		 src="{{actor.img}}" 
		 data-edit="img" 
     data-action="editImage"
		 title="{{actor.name}}" 
		 height="64" 
		 width="64"/>
  </div>
  <div class="rabble-atts">
    {{> 'systems/ewhen/templates/partials/rabble/attributes.hbs'}}
  </div>
  <div class="rabble-roll">
     <a class="ew-roll-icon" data-attribute="strength" data-action="statRoll"><i class="fa fa-dice-six"></i></a>
  </div>
  <div class="rabble-name">
      <input 
    name="name" 
    type="text" 
    value="{{actor.name}}" 
    placeholder="Name"/>
  </div>
  <div class="rabble-toggles"></div>
  <div class="rabble-rules">
     <h3>Rabble Rules</h3>
    <ul>
      <li>Rabble have 0 in all attributes and abilities</li>
      <li>Rabble may have one career at rank 0 or 1</li>
      <li>Rabble deal 1 damage when unarmed, d3 when armed, and d6L in <strong>Hordes</strong></strong></li>
    </ul>
  </div>
  <div class="rabble-powers">
    {{> 'systems/ewhen/templates/partials/PowerList.hbs'}}
  </div>
  <div class="rabble-pools">
    {{> 'systems/ewhen/templates/partials/PointPools.hbs'}}
  </div>
  <div class="quickref">
    <hr class="ew-hr"/>
    <div class="ew-statblock" style="font-weight:bold; font-size:1.15em; height:100%; text-align:center;">
      <p>Very Easy&nbsp;+2 Easy&nbsp;+1 Moderate&nbsp;+0 Hard&nbsp;-1 Tough&nbsp;-2 Demanding&nbsp;-4 Formidable&nbsp;-6 Heroic&nbsp;-8<br/>
      0 - 1 - d3 - d6L - d6 - d6H - 2d6L - 2d6 - 2d6H - 3d6L - 3d6 - 3d6H</p>
    </div>
  </div>
</div>


