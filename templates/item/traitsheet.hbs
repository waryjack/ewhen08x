<div class="trait-container" id="itemsheet">
    <div class="lttype">
        {{localize "EW.game_term.trait_type"}}
    </div>
    <div class="ltsource">
        {{localize "EW.game_term.trait_source"}}
    </div>
    <div class="ltpriority">
        {{localize "EW.game_term.primod"}}
    </div>
    <div class="lttemp">
        {{localize "EW.game_term.temporary"}}
    </div>
    <div class="ttype">
         <select style="width:100%;" name="system.type" id="type">
                       {{selectOptions traitTypeOpts selected=system.type}}
                    </select>
    </div>
    <div class="tsource">
        <select style="width:100%;" name="system.source" id="source">
                       {{selectOptions traitSourceOpts selected=system.source}}
                    </select>
    </div>
    <div class="tpriority">
        <select style="width:100%;" name="system.priority_dieMod" id="priority_dieMod">
                       {{selectOptions traitPriModOpts selected=system.priority_dieMod}}
                    </select>
    </div>
    <div class="ttemp">
         <input name="system.isTemporary" type="checkbox" {{checked system.isTemporary}} />
    </div>
    <div class="ltdesc">{{localize "EW.game_term.description"}}</div>
    <div class="tdesc"><textarea class="ewhen trait-desc" id="description" name="system.description">{{system.description}}</textarea> </div>
</div>