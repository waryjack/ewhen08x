
<div class="ew-itemborder">
                    <div class="ew-statblock ew-heading-border ew-section-header" style="text-align:center; width:100%; font-size:1.25em; background-color:none;"><strong>{{localize "EW.game_term.armor"}}</strong>
                        <a class="item-create" title="Add Armor" data-action="addItem" data-type="armor">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>

                    <table id="ew-armor-table">
                        
                        {{#each armors as |armor id|}}
                      
                        <tr>
                       
                            <td style="text-align:left; vertical-align:bottom" class="item-name item" style="max-width:50%;">
                                <a data-action="armorRoll" data-item-id="{{armor.id}}" class="armor-roll {{#if (ne armor.system.protection.variable "none")}}weapon-image{{/if}}" title="Roll Defense">
                                    <img class="ew-cs-img" src="{{armor.img}}" height="24" width="24"/>
                                </a>
                                 <a class="item-edit" data-action="editItem" title="Edit">
                                    <strong>
                                        {{armor.name}}
                                    </strong>
                                </a>
                            </td>
                            <td style="vertical-align:bottom"> 
                                <em>{{localize armor.system.armor_type}}, 
                                        {{#if (ne armor.system.protection.variable "none")}}{{armor.system.protection.variable}}/{{/if}}
                                        {{#if armor.system.accessory}}+{{/if}}{{armor.system.protection.fixed}}, 
                                        {{#if (ne armor.system.bonus.to "none")}}+{{armor.system.bonus.amount}} {{setting (getCustomName armor.system.bonus.to)}},{{/if}}
                                        {{#if (ne armor.system.penalty.to "none")}}-{{armor.system.penalty.amount}} {{setting (getCustomName armor.system.penalty.to)}}{{/if}}
                                        {{#if (ne armor.system.diffmod.to "none")}}, {{armor.system.diffmod.to}}{{/if}}
                                        {{#if armor.system.accessory}}, accessory{{/if}}
                            </em>
                            </td>
                       
                           <td style="text-align:left; vertical-align:bottom" data-item-id="{{armor.id}}">
                             {{localize "EW.game_term.equip"}} <input data-field="system.equipped" value="{{armor.system.equipped}}" class="equip-item" name="armor.system.equipped" type="checkbox" {{checked armor.system.equipped}} />
                           </td>
                                    

                            <td style="vertical-align:bottom">
                                <a class="item-delete item" data-action="deleteItem" data-item-id="{{armor.id}}">
                                    <i class="fa-solid fa-ban"></i>
                                </a>
                            </td>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
</div>
            