<div class="ewhen flex-item">
                        <h3 class="traitsheet-header"><div>{{localize "EW.game_term.careers"}}</div>
                        <a class="item-create" title="Add Career" data-type="career">
                            <i class="fas fa-plus-square"></i>
                        </a>
                    </h3>
                    
                    <table class="item-table">
                        {{#each careers as |career id|}}
                        <tr class="career-item item" data-item-id="{{career.id}}">
                            <td data-field="name" class="career-name inline-edit-ce" contenteditable>{{career.name}}</td>
                            <td class="ewhen statfield" style="width:2ch;"><input class="career-rank inline-edit" data-field="system.rank" type="text" value="{{career.system.rank}}" data-dtype="Number" maxwidth='3' size='3' /></td>
                            <!--td style="text-align:right"><i class="fa fa-edit edit-career" data-item-id="{{item._id}}"></i><i style="margin-left:2px; margin-right:2px;" class="fa fa-trash"></i></td-->
                            <td class="item-icons">
                                <a class="item-delete item" data-item-id="{{career.id}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </table>        
                </div>