
<div class="ew-statblock ew-statborder">
     <div class="ew-heading-border ew-section-header" style="text-align:center; width:100%; font-size:1.25em; background-color:none;">
        <strong>{{localize "EW.game_term.attributes.combat"}}</strong>
    </div>
<table class="ew-stat-table" id="ew-combat-table">    
<tr>
    <td><a data-attribute="melee" data-action="statRoll">{{proper gameSettings.melName}}</a></td>
    <td >{{combat_attributes.melee.rank}}{{#if (setting "useScale")}} ({{combat_attributes.melee.scale}}){{/if}}</td>
    <td>
        {{#if editMode}}
                <a data-action="adjustStat" data-stat="melee" data-dir="increase">
                    <i class="fa-regular fa-square-caret-up"></i>
                </a><br/>
                <a data-action="adjustStat" data-stat="melee" data-dir="decrease">
                    <i class="fa-regular fa-square-caret-down"></i>
                </a>
        {{/if}}
    </td>
</tr>
