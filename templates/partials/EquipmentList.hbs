<hr class="ew-hr"/>
                     <div class="ew-itemborder">

                     <div class="ew-statblock" style="text-align:center; width:100%; font-size:1.25em; background-color:none;"><strong>{{localize "EW.game_term.gearandpos"}}</strong>
                        <a class="item-create" title="Add Gear" data-action="addItem" data-type="equipment">
                            <i class="fa-solid fa-plus"></i></a>
                      </div>
                    <table id="ew-equip-table">
                        <tr>
                            <th colspan=2 style="text-align:left;">{{localize "EW.game_term.gearitem"}}</th>
                            <th style="text-align:left">{{localize "EW.game_term.description"}}</th>
                            <th>{{localize "EW.game_term.quantity"}}</th>
                            <th>{{proper (localize gameSettings.currencyName)}} ({{proper (localize gameSettings.creditName)}})</th>
                            <th>{{localize "EW.game_term.totalweight"}}</th>
                            <th></th>
                        </tr>
                        {{#each equipment as |equipment id|}} 
           
                        <tr>
                            <td><img class="ew-cs-img" src="{{equipment.img}}" height="24" width="24"/></td>
                            <td class="item-name item" data-item-id="{{equipment.id}}">
                               <a class="item-edit" data-action="editItem"><strong>{{equipment.name}}</strong></a>
                            </td>
                            <td>
                                {{equipment.system.description}}
                            </td>
                            <td style="text-align:center;">
                                {{equipment.system.quantity}}
                            </td>
                            <td style="text-align:center;">
                                {{equipment.system.currency_cost}} ({{equipment.system.credit_cost}})
                            </td>
                            <td style="text-align:center;">
                                {{equipment.system.weight}}
                            </td>
                             <td>
                                <a class="item-delete item" data-action="deleteItem" data-item-id="{{equipment.id}}">
                                    <i class="fa-solid fa-ban"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                    </div>

