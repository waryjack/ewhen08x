
{{#if (eq EWActorType "character")}}

<div class="flex-item" style="border:1px solid rgb(61, 26, 26); background-color:tan margin-left:3px; margin-right:3px">
    <div><h3 style="text-align:center">{{localize "EW.game_term.attributes.a"}}</h3></div>{{#if gameSettings.useScale}}<div style="float:right;margin-right:4px">Scale</div>{{/if}}
        <table style="background-color:tan !important; background-image:none">    
            <tr>
                <td>
                    <a data-attribute="strength" data-action="attributeRoll">{{proper gameSettings.strName}}</a>
                </td>
                <td>
                    <input type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="system.main_attributes.strength.rank" value="{{main_attributes.strength.rank}}">
                </td>
                {{#if (setting "useScale")}}
                    <td>
                        ({{main_attributes.strength.scale}})
                    </td>
                {{/if}}
            </tr>
            <tr>
                <td><a data-attribute="agility" data-action="rollAttribute">{{proper gameSettings.agiName}}</a></td>
                <td ><input  type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="system.main_attributes.agility.rank" value="{{main_attributes.agility.rank}}"></td>
                {{#if (setting "useScale")}}<td >({{main_attributes.agility.scale}})</td>{{/if}}
            </tr>
            <tr>
                <td><a data-attribute="mind">{{proper gameSettings.minName}}</a></td>
                <td ><input type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="system.main_attributes.mind.rank" value="{{main_attributes.mind.rank}}"></td>
                {{#if (setting "useScale")}}<td >({{main_attributes.agility.scale}})</td>{{/if}}
            </tr>
            <tr>
                <td><a data-attribute="appeal">{{proper gameSettings.appName}}</a></td>
                <td ><input  type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="system.main_attributes.appeal.rank" value="{{main_attributes.appeal.rank}}"></td>
                {{#if (setting "useScale")}}<td >({{main_attributes.appeal.scale}})</td>{{/if}}
            </tr>
        </table>
</div>
{{/if}}
