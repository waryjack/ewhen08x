<div class="ew-statblock ew-statborder">
<div class="ew-statblock ew-heading-border ew-section-header" style="text-align:center; width:100%; font-size:1.25em; background-color:none;"><strong>{{localize "EW.game_term.resource_pools"}}</strong>
                        {{#if editMode}}<a class="item-create" title="Add Pool" data-action="addPool" data-type="pool">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                        {{/if}}
                    </div>
<table class="ew-stat-table" id="ew-career-table">

{{#each pools as | pool |}}

<tr>
<td class="item">
   {{@key}}
</td>
<td class="item">
    <input class="attr-name" type="text" data-dtype="Number" name="system.pools.{{@key}}.current" value="{{pool.current}}">
</td>
<td>/</td>
<td class="item">
    <input class="attr-name" type="text" data-dtype="Number" name="system.pools.{{@key}}.max" value="{{pool.max}}">
</td>
<td >
    {{#if editMode}}<a class="item" data-action="deletePool" data-pool="{{@key}}" data-pool-id="{{pool.id}}">
        <i class="fa-solid fa-ban"></i>
    </a>
    {{/if}}
</td>
</tr>
{{/each}}
</table>
</div>
