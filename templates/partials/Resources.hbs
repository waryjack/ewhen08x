<div class="ew-statblock ew-statborder">
<div class="ew-statblock ew-heading-border ew-section-header" 
     style="text-align:center; width:100%; font-size:1.25em; background-color:none;">
     <strong>{{localize "EW.game_term.resources"}}</strong>
     <a class="item-create" 
        title="Add Pool" 
        data-action="addItem" 
        data-type="pointpool">
        <i class="fa-solid fa-plus"></i>
    </a>
</div>
<table class="ew-stat-table" id="ew-career-table">
{{#each pools as |pool id|}}
<tr>
<td class="item" data-item-id="{{pool.id}}">
    <a title="Edit">{{pool.name}}</a>
</td>
<td class="item" data-action="editPoolRank" data-item-id="{{pool.id}}">
    <input class="attr-name" data-field="pool.system.current" type="text" value="{{pool.system.current}}" data-dtype="Number" maxwidth='2' size='2' /> 
</td>
<td >
    <a class="item-edit item" data-action="editItem" data-item-id="{{pool.id}}"><i class="fa-solid fa-pen-to-square"></i></a>&nbsp;<a class="item" data-action="deleteItem" data-item-id="{{pool.id}}"><i class="fa-solid fa-ban"></i></a>
</td>
</tr>
{{/each}}
</table>
</div>
